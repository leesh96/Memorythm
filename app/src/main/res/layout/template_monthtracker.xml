                    android:layout_margin="7dp"
                    android:background="@drawable/icon_circle"/>
                <Button
                    android:id="@+id/btn_day28"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="28"
                    android:layout_margin="7dp"
                    android:background="@drawable/icon_circle"/>
                <Button
                    android:id="@+id/btn_day29"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="29"
                    android:padding="0dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/icon_circle"/>
                <Button
                    android:id="@+id/btn_day30"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="30"
                    android:padding="0dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/icon_circle"/>
            </TableRow>
            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn_day31"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="31"
                    android:padding="0dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/icon_circle"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:clickable="false"
                    android:layout_margin="7dp"
                    android:background="@drawable/icon_circle"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:clickable="false"
                    android:layout_margin="7dp"
                    android:background="@drawable/icon_circle"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:clickable="false"
                    android:layout_margin="7dp"
                    android:background="@drawable/icon_circle"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:clickable="false"
                    android:layout_margin="7dp"
                    android:background="@drawable/icon_circle"/>

            </TableRow>

        </TableLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/sdkukdetopokki_b"
                android:text="Comment"
                android:textColor="@color/text_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_style"
                android:fontFamily="@font/nanumsquare_acl"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:lineSpacingMultiplier="1"
                android:padding="5dp"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>