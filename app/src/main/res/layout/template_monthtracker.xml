                    android:layout_margin="7dp"
                    android:background="@drawable/icon_circle"/>
                <Button
                    android:id="@+id/btn_day18"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="18"
                    android:layout_margin="7dp"
                    android:background="@drawable/icon_circle"/>
                <Button
                    android:id="@+id/btn_day19"
