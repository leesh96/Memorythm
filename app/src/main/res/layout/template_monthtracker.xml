                    android:layout_weight="1"
                    android:text="6"
                    android:layout_margin="7dp"
                    android:background="@drawable/icon_circle"/>
                <Button
                    android:id="@+id/btn_day7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="7"
                    android:layout_margin="7dp"
                    android:background="@drawable/icon_circle"/>
                <Button
                    android:id="@+id/btn_day8"
                    android:layout_width="0dp"
