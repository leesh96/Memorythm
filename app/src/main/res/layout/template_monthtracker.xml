                    android:background="@drawable/icon_circle"/>
                <Button
                    android:id="@+id/btn_day25"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="25"
                    android:layout_margin="7dp"
                    android:background="@drawable/icon_circle"/>
            </TableRow>
            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/btn_day26"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="26"
                    android:layout_margin="7dp"
                    android:background="@drawable/icon_circle"/>
                <Button
                    android:id="@+id/btn_day27"
                    android:layout_width="0dp"
