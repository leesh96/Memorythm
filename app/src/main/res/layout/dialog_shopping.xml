<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nanumsquare_acr"
        android:text="쇼핑리스트 추가"
        android:textColor="@color/text_color"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/et_shopping"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nanumsquare_acr"
        android:hint="사야하는 물건을 입력하세요"
        android:inputType="text"
        android:textColor="@color/text_color"
        android:textSize="14dp"
        android:maxLength="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nanumsquare_acr"
        android:text="수량"
        android:textColor="@color/text_color"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_shopping" />


    <EditText
        android:id="@+id/et_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nanumsquare_acr"
        android:hint="수량을 입력하세요"
        android:inputType="number"
        android:textColor="@color/text_color"
        android:textSize="14dp"
        android:maxLength="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/et_amount"
        app:layout_constraintStart_toStartOf="@+id/et_amount"
        app:layout_constraintTop_toBottomOf="@+id/et_amount"
        android:padding="5dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:fontFamily="@font/nanumsquare_acr"
            android:text="취소"
            android:textColor="@color/text_color"
            android:textSize="14dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/btn_apply"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:fontFamily="@font/nanumsquare_acr"
            android:text="추가"
            android:textColor="@color/text_color"
            android:textSize="14dp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>