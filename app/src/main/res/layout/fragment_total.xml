        android:layout_margin="15dp"
        app:layout_constrainedHeight="true"
        android:background="@drawable/bg_memolist_b"
        app:layout_constraintBottom_toBottomOf="@+id/totalBg"
        app:layout_constraintEnd_toEndOf="@+id/totalBg"
