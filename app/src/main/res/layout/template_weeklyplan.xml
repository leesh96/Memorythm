<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame"
    android:layout_width="350dp"
    android:layout_height="620dp"
    android:background="@android:color/transparent"
    android:paddingStart="20dp"
    android:paddingTop="30dp"
    android:paddingEnd="20dp"
    android:paddingBottom="30dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sdkukdetopokki_b"
        android:text="WEEKLY PLAN"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/write_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:fontFamily="@font/sdkukdetopokki_b"
        android:text="2020-11"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/container_week"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/write_date">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/container_mon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/layout_border_top"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <CheckBox
                    android:id="@+id/checkBox_mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:buttonTint="#000000"
                    android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                    android:fontFamily="@font/sdkukdetopokki_l"
                    android:text="월"
                    android:theme="@style/CheckTheme" />

                <EditText
                    android:id="@+id/memo_content_mon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_tue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/layout_border_top"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <CheckBox
                    android:id="@+id/checkBox_tue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:buttonTint="#000000"
                    android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                    android:fontFamily="@font/sdkukdetopokki_l"
                    android:text="화"
                    android:theme="@style/CheckTheme" />

                <EditText
                    android:id="@+id/memo_content_tue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_wed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/layout_border_top"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <CheckBox
                    android:id="@+id/checkBox_wed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:buttonTint="#000000"
                    android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                    android:fontFamily="@font/sdkukdetopokki_l"
                    android:text="수"
                    android:theme="@style/CheckTheme" />

                <EditText
                    android:id="@+id/memo_content_wed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_thu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/layout_border_top"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <CheckBox
                    android:id="@+id/checkBox_thu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:buttonTint="#000000"
                    android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                    android:fontFamily="@font/sdkukdetopokki_l"
                    android:text="목"
                    android:theme="@style/CheckTheme" />

                <EditText
                    android:id="@+id/memo_content_thu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_fri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/layout_border_top"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <CheckBox
                    android:id="@+id/checkBox_fri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:buttonTint="#000000"
                    android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                    android:fontFamily="@font/sdkukdetopokki_l"
                    android:text="금"
                    android:theme="@style/CheckTheme" />

                <EditText
                    android:id="@+id/memo_content_fri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_sat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/layout_border_top"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <CheckBox
                    android:id="@+id/checkBox_sat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:buttonTint="#000000"
                    android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                    android:fontFamily="@font/sdkukdetopokki_l"
                    android:text="토"
                    android:theme="@style/CheckTheme" />

                <EditText
                    android:id="@+id/memo_content_sat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_sun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/layout_border_top_bottom"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <CheckBox
                    android:id="@+id/checkBox_sun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:buttonTint="#000000"
                    android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                    android:fontFamily="@font/sdkukdetopokki_l"
                    android:text="일"
                    android:theme="@style/CheckTheme" />

                <EditText
                    android:id="@+id/memo_content_sun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>