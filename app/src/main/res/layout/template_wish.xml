<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="620dp"
    android:background="@drawable/template_border_style">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/sdkukdetopokki_b"
        android:text="WISH LIST"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/sdkukdetopokki_b"
        android:text="2020-11-30"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_date"
        android:background="@drawable/border_ud">

        <TextView
            android:id="@+id/tv_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity"
            android:textColor="@color/text_color"
            android:textSize="14dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sdkukdetopokki_b"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_concert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_activity"
            android:layout_marginTop="20dp"
            android:layout_alignStart="@+id/tv_activity"
            android:layout_alignEnd="@+id/tv_activity"
            android:fontFamily="@font/sdkukdetopokki_b"
            android:text="Concert"
            android:textColor="@color/text_color"
            android:textSize="14dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tv_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_concert"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_alignStart="@id/tv_concert"
            android:layout_alignEnd="@+id/tv_concert"
            android:fontFamily="@font/sdkukdetopokki_b"
            android:text="Product"
            android:textColor="@color/text_color"
            android:textSize="14dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tv_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Book"
            android:textColor="@color/text_color"
            android:textSize="14dp"
            android:textAlignment="center"
            android:fontFamily="@font/sdkukdetopokki_b"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_book"
            android:text="Food"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_color"
            android:textSize="14dp"
            android:textAlignment="center"
            android:fontFamily="@font/sdkukdetopokki_b" />

        <TextView
            android:id="@+id/tv_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_food"
            android:text="Trip"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_color"
            android:textSize="14dp"
            android:textAlignment="center"
            android:fontFamily="@font/sdkukdetopokki_b" />

        <TextView
            android:id="@+id/tv_cloth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/sdkukdetopokki_b"
            android:text="Cloth"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cloth"
            android:layout_alignEnd="@+id/tv_cloth"
            android:layout_marginTop="20dp"
            android:text="movie"
            android:textAlignment="center"
            android:textSize="14dp"
            android:textColor="@color/text_color"
            android:fontFamily="@font/sdkukdetopokki_b" />

        <EditText
            android:id="@+id/et_customcate"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_movie"
            android:layout_alignEnd="@+id/tv_cloth"
            android:layout_alignBottom="@+id/tv_trip"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_d"
            android:maxLength="8"
            android:textColor="@color/text_color"
            android:textSize="14dp"
            android:textAlignment="center"
            android:fontFamily="@font/sdkukdetopokki_b"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/wish_rcview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/relativelayout" />

    <ImageButton
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_add"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>