<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/templateID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TemplateFragment">

    <ImageView
        android:id="@+id/templateBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/folder_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/templateRV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/templateBg"
        app:layout_constraintEnd_toEndOf="@+id/templateBg"
        app:layout_constraintStart_toStartOf="@+id/templateBg"
        app:layout_constraintTop_toTopOf="@+id/templateBg" />

</androidx.constraintlayout.widget.ConstraintLayout>